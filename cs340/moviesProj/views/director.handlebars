<html>

<head>
    <title> Director </title>
</head>

{{#each foo}} {{this}} {{/each}}
<h3>Add new director:</h3>
<form id="adddirector" action="/director" method="post">
    First name:
    <input type="text" name="fname"> Last name:
    <input type="text" name="lname">
    <br>
    <input type="submit" value="Submit">
</form>
<br/>
<h3>Current Directors:</h3>
<table>
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
    </thead>
    <tbody>
        {{#each directors}}
        <tr>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>
                <button onclick="deleteDirector({{id}})">Delete</button>
            </td>
            <td>
                <a href="/director/{{id}}">Update</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<br/>

</html>