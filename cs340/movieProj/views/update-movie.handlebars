<html>
<h1>Update {{movies.title}}:</h1>
<form id="update-movie" action="/movie" method="post">
    Title:
    <input type="text" name="title" value="{{movies.title}}">
    <br> Year:
    <input type="Number" name="year" value="{{movies.year}}">
    <br> Director:
    <select name="director" id="director-selector">
        {{#each directors}}
        <option value="{{id}}">{{first_name}} {{last_name}}</option>
        {{/each}}
    </select>
    <br> Producer:
    <select name="producer" id="producer-selector">
        {{#each producers}}
        <option value="{{id}}">{{first_name}} {{last_name}}</option>
        {{/each}}
    </select>
    <br> Genre:
    <select name="genre" id="genre-selector">
        {{#each genres}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    <br>
</form>
<button onclick="updateMovie({{movies.id}})">Update</button>

</html>