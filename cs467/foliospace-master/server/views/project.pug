extends layout

block variables
  - var title = "Edit Project"

block content
    // ADAPTED FROM "JavaScript: serialize a form as JSON"
    // ORIGINAL AUTHOR: Gabriele Romanato
    // SOURCE: https://codepen.io/gabrieleromanato/pen/LpLVeQ
    form#editprj(name='editprj', action='#', method='post')
        .form-group
            label(for='projectName') Project Name
            input#projectName.form-control(type='text', value=project.projectName, name='projectName', required)
            p
            .form-group
                label(for='projectBlurb') Project Description
                textarea#projectBlurb.form-control(name='projectBlurb', rows='10', cols='20') #{project.projectBlurb}
            p
                input.btn.btn-primary.btn-block(type='submit', value='Save')
            pre#output.
    form#upload(action='', method='post')
        .form-group
            input#prjId(type='hidden', name='prjId', value=project.projectId)
            input.btn.btn-primary.btn-block(type='submit', value='Upload Files')            
    script(src='/javascript/project_form_handler.js')
    script(src='/javascript/upload_handler.js')
    script(src='https://widget.cloudinary.com/v2.0/global/all.js', type='text/javascript')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js')    